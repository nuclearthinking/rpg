<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.nuclearthinking.game.entity.Weapon" table="weapon">
        <id name="id" type="java.lang.Integer" column="weapon_id">
            <generator class="increment"/>
        </id>
        <property name="weaponType" type="java.lang.Integer" column="weapon_type"/>

        <property name="name" type="java.lang.String" column="name"/>

        <property name="strengthBonus" type="java.lang.Integer" column="str_b"/>

        <property name="intelligenceBonus" type="java.lang.Integer" column="int_b"/>

        <property name="agilityBonus" type="java.lang.Integer" column="agi_b"/>

        <property name="damageMinimal" type="java.lang.Integer" column="damage_minimal"/>

        <property name="damageMaximal" type="java.lang.Integer" column="damage_maximal"/>
    </class>
</hibernate-mapping>